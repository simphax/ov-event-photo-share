{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./build",
    "paths": {
      "@common/*": [
        "../common/*"
      ]
    },
  },
  "include": [
    "server.ts",
    "../common"
  ],
}